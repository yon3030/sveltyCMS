/*place global styles here */

html,
body {
	@apply h-full overflow-hidden;
}

.gradient-primary {
	@apply bg-gradient-to-br from-primary-700 via-primary-600 to-primary-500
	dark:bg-gradient-to-br dark:from-primary-700 dark:via-primary-600 dark:to-primary-400;
}
.gradient-primary-hover {
	@apply hover:bg-gradient-to-br hover:from-primary-700 hover:via-primary-600 hover:to-primary-500
	dark:hover:bg-gradient-to-br dark:hover:from-primary-700 dark:hover:via-primary-600 dark:hover:to-primary-400;
}

.gradient-secondary {
	@apply bg-gradient-to-br from-surface-500 via-surface-400 to-surface-300 
	dark:bg-gradient-to-br dark:from-surface-700 dark:via-surface-600 dark:to-surface-400;
}
.gradient-secondary-hover {
	@apply hover:bg-gradient-to-br hover:from-surface-400 hover:via-surface-400 hover:to-surface-500 
	dark:hover:bg-gradient-to-br dark:hover:from-surface-700 dark:hover:via-surface-600 dark:hover:to-surface-400;
}

.gradient-error {
	@apply bg-gradient-to-br from-error-600 via-error-500 to-error-300
