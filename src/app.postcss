	dark:hover:bg-gradient-to-br dark:hover:from-error-700 dark:hover:via-error-500 dark:hover:to-error-300;
}

.gradient-tertiary {
	@apply bg-gradient-to-br from-tertiary-600 via-tertiary-500 to-tertiary-300
