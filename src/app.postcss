}
.gradient-tertiary-hover {
	@apply hover:hover:bg-gradient-to-br hover:from-tertiary-600 hover:via-tertiary-500 hover:to-tertiary-300
	dark:hover:hover:bg-gradient-to-br dark:hover:from-tertiary-800 dark:hover:via-tertiary-600 dark:hover:to-tertiary-400;
}

.gradient-yellow {
	@apply bg-gradient-to-br from-yellow-600 via-yellow-500 to-yellow-300
